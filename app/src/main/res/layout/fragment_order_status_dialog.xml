<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@drawable/pop_activity_bg"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:padding="@dimen/title_margin"
    android:showDividers="middle"
    tools:context="com.joker.flowershop.ui.order.OrderStatusDialogFragment">

    <TextView
        android:id="@+id/order_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="订单状态"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/order_status_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
