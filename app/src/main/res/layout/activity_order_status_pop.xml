<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33616161"
    tools:context="com.joker.flowershop.ui.order.OrderStatusPopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@drawable/pop_activity_bg"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:padding="@dimen/title_margin"
        android:showDividers="middle">

        <TextView
            android:id="@+id/order_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_margin"
            android:clickable="true"
            android:text="订单状态"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/order_status_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
